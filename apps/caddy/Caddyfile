{$HOSTNAME:localhost} {
  tls internal

  handle {
    reverse_proxy client:3000
  }

  handle /images/* {
    header Cross-Origin-Resource-Policy "cross-origin"
    reverse_proxy client:3000
  }

  @api path /api /api/*
  handle @api {
    reverse_proxy server:3001
  }

  @socket path /socket.io /socket.io/*
  handle @socket {
    reverse_proxy server:3001
  }

}
