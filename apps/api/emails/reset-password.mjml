<mjml>
  <mj-head>
    <mj-title>Reset password</mj-title>
    <mj-attributes>
      <mj-all font-family="'Helvetica Neue', Helvetica, Arial, sans-serif"></mj-all>
      <mj-text
        font-weight="400"
        font-size="16px"
        color="#637381"
        line-height="24px"
        font-family="'Helvetica Neue', Helvetica, Arial, sans-serif"
      ></mj-text>
    </mj-attributes>
  </mj-head>
  <mj-body background-color="#E7E7E7" width="600px">
    <mj-section full-width="full-width">
      <mj-column width="100%">
        <mj-image href="https://tarrasque.app" src="cid:logo" alt="" align="center" width="100px" />

        <mj-text align="center" letter-spacing="1px">Tarrasque App</mj-text>
      </mj-column>
    </mj-section>

    <mj-wrapper padding-top="0" padding-bottom="0">
      <mj-section background-color="#ffffff" padding-left="15px" padding-right="15px" border-radius="10px">
        <mj-column width="100%">
          <mj-text>
            <h2>Hi {{name}},</h2>
          </mj-text>

          <mj-text>
            You recently requested to reset your password for your Tarrasque App account. Use the button below to reset
            it. <strong>This password reset is only valid for the next 24 hours</strong>.
          </mj-text>

          <mj-button
            background-color="#9b7d65"
            align="center"
            font-size="17px"
            font-weight="bold"
            href="{{resetPasswordUrl}}"
            width="300px"
            border-radius="90px"
          >
            Reset your password
          </mj-button>

          <mj-text>
            If you did not request a password reset, please ignore this email or
            <a href="mailto:support@tarrasque.app" style="color: #9b7d65">contact support</a> if you have questions.
          </mj-text>

          <mj-text>
            Thanks,
            <br />
            The Tarrasque App Team
          </mj-text>
        </mj-column>
      </mj-section>
    </mj-wrapper>

    <mj-wrapper full-width="full-width">
      <mj-section>
        <mj-column width="100%">
          <mj-text font-size="11px" align="center"> &copy; Tronite Ltd. All rights reserved. </mj-text>
        </mj-column>
      </mj-section>
    </mj-wrapper>
  </mj-body>
</mjml>
